set runtimepath=/Users/rmcgeary/.vimperator
set wildoptions=auto
set popups=tab,resized
source! /Users/rmcgeary/.vimperatorrc.local

" vim: set ft=vimperator:

" Override the behavior of standard Firefox shortcuts
map <M-l> :o<Space>
map <M-k> :o<Space>
map <M-f> /
map <M-t> t

" Because a bell is annoying for standard Firefox shortcuts
:set visualbell
:hi Bell display: none;
